                    <DataGridCheckBoxColumn Header="Key" Width="1*" Binding="{Binding Key}"
                                            ElementStyle="{StaticResource SswCheckBox}"
                                            EditingElementStyle="{StaticResource SswCheckBox}"/>
                    <DataGridCheckBoxColumn Header="Not Null" Width="1*" Binding="{Binding NotNull}"
                                            ElementStyle="{StaticResource SswCheckBox}"
                                            EditingElementStyle="{StaticResource SswCheckBox}"/>
                    <DataGridTemplateColumn x:Name="SaveColumn" Header="" Width="1*" CellStyle="{StaticResource ButtonCell}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Save" Style="{StaticResource DataGridButton}" Click="ColumnSaveButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn x:Name="DeleteColumn" Header="" Width="1*" CellStyle="{StaticResource ButtonCell}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Style="{StaticResource DataGridButton}" Click="ColumnDeleteButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="TextButton" Width="100" Click="TextButton_Click">Text</Button>
            <Button x:Name="MakeButton" Width="100" Click="MakeButton_Click">Make</Button>
            <Button x:Name="ModifyButton" Width="100" Click="ModifyButton_Click">Modify</Button>
            <Button x:Name="CancelButton" Width="100" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </Grid>
